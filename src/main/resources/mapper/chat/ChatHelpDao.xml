<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.modules.chat.dao.ChatHelpDao">

    <!-- 字段集 -->
    <sql id="baseSql">
        select help_id, title, content, status, sort from chat_help
    </sql>

    <!-- 查询列表字段 -->
    <select id="queryList" resultType="com.platform.modules.chat.domain.ChatHelp">
        <include refid="baseSql"/>
        <where>
            <if test="status != null">
                and status = #{status.code}
            </if>
        </where>
    </select>

</mapper>
